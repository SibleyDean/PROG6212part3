@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="login-card">
    <div class="login-header">
        <h2 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>Welcome Back</h2>
        <p class="mb-0 mt-2 opacity-75">Claim Management System</p>
    </div>
    <div class="login-body">
        <form method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-login mb-4">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </button>
        </form>

        <div class="demo-accounts">
            <h6 class="mb-3"><i class="fas fa-key me-2"></i>Demo Accounts:</h6>
            <div class="row g-2">
                <div class="col-12">
                    <small class="text-muted">
                        <strong class="text-danger">HR:</strong> hr@university.com / HR123
                    </small>
                </div>
                <div class="col-12">
                    <small class="text-muted">
                        <strong class="text-success">Lecturer:</strong> lecturer@university.com / Lecturer123
                    </small>
                </div>
                <div class="col-12">
                    <small class="text-muted">
                        <strong class="text-warning">Programme Coordinator:</strong> coordinator@university.com / Coordinator123
                    </small>
                </div>
                <div class="col-12">
                    <small class="text-muted">
                        <strong class="text-info">Academic Manager:</strong> manager@university.com / Manager123
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>