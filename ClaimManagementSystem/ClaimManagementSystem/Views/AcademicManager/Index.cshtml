@model List<Claim>
@{
    ViewData["Title"] = "Final Approval";
}

<h2><i class="fas fa-check-double me-2"></i>Final Approval - Claims Ready for Payment</h2>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Lecturer</th>
                            <th>Title</th>
                            <th>Submission Date</th>
                            <th>Hours</th>
                            <th>Amount</th>
                            <th>Documentation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.User?.Name @claim.User?.Surname</td>
                                <td>
                                    <strong>@claim.Title</strong>
                                    @if (!string.IsNullOrEmpty(claim.Description))
                                    {
                                        <br>
                                        <small class="text-muted">@claim.Description</small>
                                    }
                                </td>
                                <td>@claim.SubmissionDate.ToString("dd/MM/yyyy")</td>
                                <td>@claim.HoursWorked</td>
                                <td class="fw-bold text-success">R @claim.Amount.ToString("F2")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(claim.Documentation))
                                    {
                                        <a href="@claim.Documentation" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-download me-1"></i>View Doc
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No document</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <form method="post" asp-action="ApproveClaim" class="d-inline">
                                            <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-success" title="Approve and Mark as Paid">
                                                <i class="fas fa-check"></i> Approve & Pay
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#rejectModal@(claim.ClaimId)"
                                                title="Reject Claim">
                                            <i class="fas fa-times"></i> Reject
                                        </button>
                                    </div>

                                    <!-- Reject Modal -->
                                    <div class="modal fade" id="rejectModal@(claim.ClaimId)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Reject Claim</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <form method="post" asp-action="RejectClaim">
                                                    <input type="hidden" name="claimId" value="@claim.ClaimId" />
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">Rejection Reason</label>
                                                            <textarea name="rejectionReason" class="form-control" rows="3"
                                                              placeholder="Provide reason for rejection..." required></textarea>
                                                        </div>
                                                        <div class="alert alert-warning">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                            This will return the claim to the lecturer with your feedback.
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fas fa-times me-1"></i>Reject Claim
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h5>No claims pending final approval</h5>
                <p class="text-muted">All claims approved by Programme Coordinators have been processed</p>
                <div class="mt-3">
                    <small class="text-info">
                        <i class="fas fa-info-circle me-1"></i>
                        Claims will appear here after Programme Coordinator approval
                    </small>
                </div>
            </div>
        }
    </div>
</div>

@if (Model.Any())
{
    <div class="mt-3">
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>@Model.Count claims</strong> awaiting final approval and payment processing.
        </div>
    </div>
}