@model Claim
@{
    ViewData["Title"] = "View Claim";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-eye me-2"></i>View Claim</h4>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-8">
                <h3>@Model.Title</h3>
                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
            </div>
            <div class="col-md-4 text-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Submission Date</label>
                    <p>@Model.SubmissionDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Hours Worked</label>
                    <p>@Model.HoursWorked</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Amount</label>
                    <p class="h5 text-success">R @Model.Amount.ToString("F2")</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">Status</label>
                    <p><span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span></p>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Description</label>
            <div class="border p-3 bg-light rounded">
                @Model.Description
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Documentation))
        {
            <div class="mb-3">
                <label class="form-label fw-bold">Supporting Documentation</label>
                <div class="border p-3 bg-light rounded">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-file-pdf fa-2x text-danger me-3"></i>
                        <div>
                            <div class="fw-bold">@Model.OriginalFileName</div>
                            <a href="@Model.Documentation" target="_blank" class="btn btn-sm btn-outline-primary mt-1">
                                <i class="fas fa-download me-1"></i>Download Document
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.RejectionReason))
        {
            <div class="mb-3">
                <label class="form-label fw-bold text-danger">Rejection Reason</label>
                <div class="border p-3 bg-light rounded text-danger">
                    @Model.RejectionReason
                </div>
            </div>
        }
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Submitted" => "bg-warning",
            "ApprovedByProgrammeCoordinator" => "bg-info",
            "ApprovedByAcademicManager" => "bg-success",
            "Paid" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}