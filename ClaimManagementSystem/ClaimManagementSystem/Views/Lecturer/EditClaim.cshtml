@model Claim
@{
    ViewData["Title"] = "Edit Claim";
    var hourlyRate = ViewBag.HourlyRate;
}

<div class="card">
    <div class="card-header bg-warning text-dark">
        <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Claim</h4>
    </div>
    <div class="card-body">
        <!-- Add Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <form asp-action="EditClaim" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="ClaimId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Claim Title *</label>
                <input asp-for="Title" class="form-control" placeholder="Enter a descriptive title for this claim" required>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description *</label>
                <textarea asp-for="Description" class="form-control" rows="3"
                          placeholder="Provide a detailed description of the work performed..."
                          maxlength="1000" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-text"><span id="charCount">@(Model.Description?.Length ?? 0)</span>/1000 characters</div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="HoursWorked" class="form-label">Hours Worked *</label>
                        <input asp-for="HoursWorked" class="form-control" id="hoursWorked"
                               type="number" step="0.01" min="0.01" max="180" required>
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                        <div class="form-text">Maximum 180 hours per month</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Hourly Rate</label>
                        <input type="text" class="form-control" value="R @hourlyRate" readonly>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Calculated Amount</label>
                        <input type="text" class="form-control" id="calculatedAmount" value="R @Model.Amount.ToString("F2")" readonly>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Current Status</label>
                        <input type="text" class="form-control" value="@Model.Status" readonly>
                        <div class="form-text text-info">
                            <i class="fas fa-info-circle me-1"></i>
                            Only claims with "Submitted" status can be edited
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="documentationFile" class="form-label">Supporting Documentation</label>

                @if (!string.IsNullOrEmpty(Model.Documentation))
                {
                    <div class="mb-2">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-file me-2 text-primary"></i>
                            <a href="@Model.Documentation" target="_blank" class="me-2">
                                @(Model.OriginalFileName ?? "Download Document")
                            </a>
                            <span class="badge bg-secondary">Current File</span>
                        </div>
                    </div>
                    <div class="form-text text-info">
                        <i class="fas fa-info-circle me-1"></i>
                        Upload a new file only if you want to replace the current one.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        No documentation file uploaded for this claim.
                    </div>
                }

                <input type="file" class="form-control mt-2" id="documentationFile" name="documentationFile"
                       accept=".pdf,.doc,.docx,.jpg,.jpeg,.png">
                <span class="text-danger" id="documentationFileError"></span>
                <div class="form-text">
                    <i class="fas fa-info-circle me-1"></i>
                    Upload supporting documents (PDF, Word, JPG, PNG). Maximum file size: 5MB.
                </div>
                <div class="mt-2">
                    <small class="text-muted" id="fileNamePreview"></small>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                    <i class="fas fa-times me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-warning" id="submitButton">
                    <i class="fas fa-save me-1"></i>Update Claim
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize calculated amount
            updateCalculatedAmount();

            $('#hoursWorked').on('input', function() {
                updateCalculatedAmount();
            });

            // Character count for description
            $('#Description').on('input', function() {
                var length = $(this).val().length;
                $('#charCount').text(length);
                if (length > 1000) {
                    $('#charCount').addClass('text-danger');
                } else {
                    $('#charCount').removeClass('text-danger');
                }
            });

            // File name preview
            $('#documentationFile').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                if (fileName) {
                    $('#fileNamePreview').html('<i class="fas fa-file me-1"></i>' + fileName);
                } else {
                    $('#fileNamePreview').html('');
                }
            });

            // Prevent double form submission
            $('form').on('submit', function() {
                $('#submitButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Updating...');
            });

            function updateCalculatedAmount() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                var hourlyRate = @hourlyRate;
                var amount = hours * hourlyRate;
                $('#calculatedAmount').val('R ' + amount.toFixed(2));
            }

            // Trigger initial calculations
            $('#hoursWorked').trigger('input');
            $('#Description').trigger('input');
        });
    </script>
}