@model List<User>
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2"></i>User Management</h2>
    <div>
        <a href="@Url.Action("CreateUser")" class="btn btn-success me-2">
            <i class="fas fa-user-plus me-2"></i>Add New User
        </a>
        <a href="@Url.Action("GenerateReport")" class="btn btn-primary">
            <i class="fas fa-chart-bar me-2"></i>Generate Report
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Hourly Rate</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Name @user.Surname</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge @GetRoleBadgeClass(user.Role)">@user.Role</span>
                                </td>
                                <td>
                                    @if (user.HourlyRate.HasValue)
                                    {
                                        <text>R @user.HourlyRate.Value.ToString("F2")</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-danger")">
                                        @(user.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("EditUser", new { id = user.UserId })"
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5>No users found</h5>
                <p class="text-muted">Add your first user to get started</p>
                <a href="@Url.Action("CreateUser")" class="btn btn-primary">
                    <i class="fas fa-user-plus me-2"></i>Add User
                </a>
            </div>
        }
    </div>
</div>

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "HR" => "bg-primary",
            "Lecturer" => "bg-info",
            "ProgrammeCoordinator" => "bg-warning",
            "AcademicManager" => "bg-success",
            _ => "bg-secondary"
        };
    }
}